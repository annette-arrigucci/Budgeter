@model IEnumerable<Budgeter.Models.UserInfoViewModel>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}
<h2>Household</h2>
<h4>Members</h4>

@if (!Model.Any())
{
    <p>You aren't a member of any households.</p>
    <p>@Html.ActionLink("Create a household", "Create", "Household")</p>
}
else
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                    @if(User.Identity.GetUserId() == item.UserId)
                    {
                        @Html.Raw("&nbsp;(Me)");
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </tbody>
</table>
}
<h4>Invite Users</h4>
@using (Html.BeginForm("InviteUser","Household", FormMethod.Post, new { email = Email }, null))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-4">
                <p>Invite another user to join your household.</p>
            </div>
            <div class="row">
                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @*@Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input data-val="true" data-val-length="The field Email must be a string with a minimum length of 3 and a maximum length of 160." data-val-length-max="160" data-val-length-min="3" data-val-required="No email entered." class="form-control" id="Email" name="Email" type="email" value="" />
                    @*@Html.ValidationMessageFor("Email", "", new { @class = "text-danger" })*@
                </div>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send Invitation" class="btn btn-default" />
            </div>
        </div>
    </div>
}